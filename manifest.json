{
    "manifest_version": 2,
    "name": "Data Collector",
    "description": "This extension collects data from the webpage and saves it to IndexedDB",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  